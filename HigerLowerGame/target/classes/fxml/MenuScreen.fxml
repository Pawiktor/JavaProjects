   <center>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="startGameButton" mnemonicParsing="false" onAction="#startGame" text="Start Game" />
            <Button fx:id="scoresButton" mnemonicParsing="false" onAction="#showScores" text="Scores" />
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitApp" text="Exit" />
         </children>
      </VBox>
   </center>
</BorderPane>
